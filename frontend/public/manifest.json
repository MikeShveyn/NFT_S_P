{
  "name": "NFT Defender",
  "version": "1.2",
  "manifest_version": 3,
  "description": "Checks the security of NFTs on Opensea",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": {
      "48": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["injectWarning.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "icons": {
    "48": "logo192.png"
  }
}
